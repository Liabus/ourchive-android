<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity$PlaceholderFragment">
    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <ImageButton
            android:id="@+id/add_photo_btn"
            android:layout_height="125dp"
            android:layout_width="0dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:src="@drawable/iconphotos"
            android:background="@null"
            android:scaleType="centerInside" />
        <ImageButton
            android:id="@+id/add_video_btn"
            android:layout_height="125dp"
            android:layout_width="0dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:src="@drawable/iconvideo"
            android:background="@null"
            android:scaleType="centerInside" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/add_text_btn"
            android:layout_weight="1"
            android:layout_height="125dp"
            android:layout_width="0dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/icontext"
            android:background="@null"
            android:scaleType="centerInside" />
        <ImageButton
            android:id="@+id/add_audio_btn"
            android:layout_weight="1"
            android:layout_height="125dp"
            android:layout_width="0dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/iconaudio"
            android:background="@null"
            android:scaleType="centerInside" />
    </LinearLayout>

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:id="@+id/my_stream"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/iconmystream"
        android:background="@null"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#3C3C3C"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeff's Wedding"
            android:id="@+id/event_row1"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_margin="5dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#3C3C3C"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="European Vacation"
            android:id="@+id/event_row2"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_margin="5dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#3C3C3C"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kole's Bar Mitzvah"
            android:id="@+id/event_row3"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_margin="5dp" />
    </LinearLayout>

</LinearLayout>

